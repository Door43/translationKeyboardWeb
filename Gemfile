source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.5'

# Use postgres as the database for Active Record
# user is keyboard_app
# database name is keyboard_dev
# start with: pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start
# stop with: pg_ctl -D /usr/local/var/postgres stop -s -m fast
# webpage instructions: http://blog.willj.net/2011/05/31/setting-up-postgresql-for-ruby-on-rails-development-on-os-x/
gem 'pg'
gem 'tzinfo-data'
gem 'nokogiri'

