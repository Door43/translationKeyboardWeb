<% content_for :content do %>


  <div class="row">
    <div class="col-xs-7">
  <h3><%= @parent_keyboard.name %> (<%= @parent_keyboard.iso_language %>-<%= @parent_keyboard.iso_region %>)</h3>
  <h4><%= @selected_keyboard_variant.name %></h4>
  <h4><span class="glyphicon <%= @selected_keyboard_variant.keyboard_type.icon_class %>"></span> <%= @selected_keyboard_variant.keyboard_type.name %></h4>
    </div>

    <div class="col-xs-7 keyboard-edit-btn">
    <button type="button" class="btn btn-primary pull-right edit-keyboard">Edit Keyboard</button>
      <button type="button" class="btn pull-right view-qr" data-nav-url="<%= root_url.to_s + '/qrs/qr-' + @selected_keyboard_variant.id.to_s  + '.png'   %>">View Keyboard QR</button>
</div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-xs-2">
      Load a Different Keyboard
    </div>
    <div class="col-xs-5">
      <%= grouped_collection_select(:selected_keyboard_variant, :id, @parent_keyboard_list, :keyboard_variants,
                                    :name, :id, :name, {}, {class: 'form-control selectpicker'}) %>
    </div>


  </div>



  <div class="type-area">

    <textarea style="width:100%;" class="type-area-textarea"></textarea>

  </div>

 <%= yield %>

  <div class="row shift-space-row">
    <div class="col-xs-2 col-xs-offset-1">
      <button type="button" class="btn btn-default shift-btn" data-char="">SHIFT</button>
    </div>
    <div class="col-xs-5 col-xs-offset-1">
      <button style="width:100%;" type="button" class="btn btn-default keypress" data-char=" ">SPACE</button>
    </div>
    <div class="col-xs-2 col-xs-offset-2">
      <button type="button" class="btn btn-default shift-btn" data-char="">SHIFT</button>
    </div>
  </div>



    <div class="keyboard-qr" id="qr">

      <img style="display:none;" src="/qr.png" />

    </div>


<% end %>




<%= render template: "layouts/application" %>
